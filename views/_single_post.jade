!!!
html
  head
    meta(charset='utf8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
    meta(name='description', content='description of your site')
    meta(name='author', content= "author of the site")
    // For mobile
    meta(name='viewport', content='width=device-width, initial-scale=1.0, user-scalable=yes')

    title= post.title

    link(rel='stylesheet', href='/css/master.css')
    link(media='only screen and (max-device-width: 480px)', rel='stylesheet', href='/css/mobile.css')
    //link(rel='stylesheet', href='/bower_components/google-code-prettify/src/prettify.css')
    link(rel='stylesheet', href='/bower_components/google-code-prettify/styles/desert.css')

  body
    header
      a(href="/")
        h1 yukimemi's blog
      #googlesearch
        include googlecse.html

    #posts
      h2= post.title
      // ninja social button
      include ninja.html

      // twitter follow button
      include twitterfollow.html

      p= "[" + post.date + "]"

      != content
      a(href='/') &laquo; back to index

      hr

      // Disqus
      include disqus.html

  //- add other scripts through require.js, not here
  script(data-main="/js/main", src="/js/require.js")

  // google analytics
  include googleanalytics.html
