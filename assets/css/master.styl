@import '_settings'

normalize()
base()

// base styles on everything, for prototyping
framework()

header
  background: #fefcea
  background: linear-gradient(bottom, #fefcea 0%,#e03333 82%)
  width: 100%
  text-align: center

  h1
    color: white
    margin-top: 0
    padding: 80px 0
    font-weight: 300

#posts
  reset-list()
  width: 800px
  margin: 30px auto

  h2
    margin-bottom: 40px

  li
    margin: 10px 0
    fs: 1.5em

.plist
    display: none

div#posts
  ol
    li
      list-style-type: decimal
  ul
    li
      list-style-type: disc
      margin: 2px 0
      fs: 1em

  pre
    ol
      li
        margin: 3px 0

#main
  width: 800px
  margin: 50px auto

body
  a
    color: #e03333

pre
  line-height: 1.8
  code
    margin: 0
    padding: 0
    font-size: 13px
    border: 0
    background: none
  ol
    font-size: 8px

hr
  margin: 30px 0
  border: 0
  height: 0
  border-top: 1px solid rgba(0, 0, 0, 0.1)
  border-bottom: 1px solid rgba(255, 255, 255, 0.3)

#disqus
  margin: 20px 0
