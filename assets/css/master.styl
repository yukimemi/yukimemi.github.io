@import '_settings'

normalize()
base()

// base styles on everything, for prototyping
framework()

header
  background: #fefcea
  background: linear-gradient(bottom, #fefcea 0%,#e03333 82%)
  width: 100%
  text-align: center
  #googlesearch
    width: 300px
    margin-left: auto
    div.gsc-control-cse
      background: rgba(0, 0, 0, 0)
      border: none
      table
        tr
          td
            background: rgba(0, 0, 0, 0)
            border: none
          td.gsc-search-button
            input.gsc-search-button
              background-color: #666
          td.gsc-clear-button
            display: none

  h1
    color: white
    margin-top: 0
    padding: 80px 0 10px
    font-weight: 300

#posts
  reset-list()
  width: 800px
  margin: 30px auto

  h2
    margin-bottom: 40px

  li
    margin: 10px 0
    fs: 1.5em

  .plist
    display: none
    margin: 0
    padding: 10px 15px
    border-bottom: 1px solid rgba(0, 0, 0, 0.1)
    p
      margin: 0
  .plist:hover
    background-color: rgba(230, 230, 230, 0.5)
    transition: all 0.5s

div#posts
  h3
    border-bottom: 1px dashed #aaa
    border-left: 7px solid rgba(180,0,0,0.2)
    margin: 15px 0
    padding: 5px 15px
  h4
    margin: 10px 0 20px
    padding: 2px 8px
    border-width: 0 0 5px 0
    border-color: #e88796
    border-style: solid
    background: #fff
    color: #e77989
    line-height: 140%
    font-weight: bold

  ol
    font-size: 12px
    li
      color: #e03333
      list-style-type: decimal
      p
        color: black
  ul
    li
      list-style-type: disc
      margin: 2px 0
      fs: 1em
  pre
    line-height: 1.8
    code
      margin: 0
      padding: 0
      border: 0
      background: none
    ol.linenums
      font-size: 8px
      margin: 5px 0
      padding-left: 4em
      li
        color: #aeaeae
        margin: 0
        padding-left: 1em
        border-left: dashed 1px green
      li.L1,
      li.L3,
      li.L5,
      li.L7,
      li.L9
        background: rgb(49, 49, 49, 0.2)

  #back
    margin-top: 50px

#main
  width: 800px
  margin: 50px auto

body
  a
    color: #e03333

code
  color: black

hr
  margin: 30px 0
  border: 0
  height: 0
  border-top: 1px solid rgba(0, 0, 0, 0.1)
  border-bottom: 1px solid rgba(255, 255, 255, 0.3)

#disqus
  margin: 20px 0

#twitterfollow
  margin: 10px 0

#ninja
  margin: -20px 0 5px

.pagination
  margin-left: 15px !important
